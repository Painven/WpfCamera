<Window
    x:Class="WpfCamera.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfCamera"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xamlhost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
    Loaded="Window_Loaded"
    Title="WPF camera"
    Width="1200"
    Height="800"
    d:Height="200"
    d:Width="400"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <xamlhost:WindowsXamlHost
            x:Name="captureViewer"
            Grid.Row="0"
            Grid.Column="0" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <Button
                Command="{Binding CreatePhotoCommand}"
                x:Name="btnPhoto"
                Margin="10"
                Content="Photo" />
            <Button
                x:Name="btnVideo"
                Margin="10"
                Content="Video" />
            <Button
                x:Name="btnAudio"
                Margin="10"
                Content="Audio" />
            <Button
                x:Name="btnOpenFolder"
                Margin="10"
                Content="Open Folder" />
        </StackPanel>
        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="10,2,2,2"
            Orientation="Vertical">
            <TextBlock Margin="10,10,2,2" Text="Лог событий" />
            <ListBox ItemsSource="{Binding Logs}" />
        </StackPanel>

    </Grid>
</Window>
